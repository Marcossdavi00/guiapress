<%- include ('../../partials/header.ejs'); %>


    <%- include ('../../partials/navbar.ejs'); %>

    <div class="container mt-4">
        <%- include('../../partials/msg.ejs'); %>
        <hr>
        <h2>Artigos:</h2>
        <hr>
        <a class="btn btn-success" href="/admin/articles/new">Cadastrar novo artigo</a>
        <table class="table table-bordered mt-4">
            <thead>
                <tr class="card-header">
                    <td>ID</td>
                    <td>Title</td>
                    <td>Slug</td>
                    <td>Category</td>
                    <td>Ações</td>
                </tr>
            </thead>
            <tbody>
                <% article.forEach(article=>{ %>
                    <tr>
                        <td><%- article.id %></td>
                        <td><%- article.title %></td>
                        <td><%- article.slug %></td>
                        <td><%- article.Category.title %></td>
                        <td>
                            <a class="btn btn-warning" href="/admin/categories/edit/">Editar</a>
                            <form action="/admin/articles/delete" method="POST" style="display:inline" onsubmit="confirmarDelecao(event, this)">
                                <input type="hidden" name="id" value="<%- article.id %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
    </div>
<%- include ('../../partials/footer.ejs'); %>
<script>
    function confirmarDelecao(event, form) {
        event.preventDefault();
        let decision = confirm("Deseja realmente deletar a categoria?")
        if (decision) {
            form.submit();
        }
    }
</script>